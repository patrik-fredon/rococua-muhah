# Database Configuration
DATABASE_URL=sqlite:///./app.db
# For PostgreSQL: postgresql://user:password@localhost:5432/dashboard_db
# For MySQL: mysql+pymysql://user:password@localhost:3306/dashboard_db

# Security Settings (CRITICAL: Change in production!)
SECRET_KEY=your-super-secret-key-here-generate-a-secure-one-at-least-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=FastAPI Dashboard
PROJECT_VERSION=1.0.0

# CORS Settings (comma-separated list)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Security & Performance
SECURE_COOKIES=false
HTTPS_ONLY=false
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
WORKERS=1
MAX_CONNECTIONS=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# Feature Flags
WEBSOCKET_ENABLED=true
SWAGGER_UI_ENABLED=true

# Optional Third-party Integrations
SENTRY_DSN=
EMAIL_BACKEND=

# Production Example (uncomment and modify for production):
# ENVIRONMENT=production
# DEBUG=false
# SECRET_KEY=your-production-secret-key-minimum-32-characters-long
# SECURE_COOKIES=true
# HTTPS_ONLY=true
# DATABASE_URL=postgresql://user:password@localhost:5432/dashboard_db
# BACKEND_CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
# WORKERS=4
# LOG_LEVEL=WARNING
# SWAGGER_UI_ENABLED=false
